    <% end %>
  </div>

  <div>
    <%= form.label :Telefone, style: "display: block" %>
    <%= form.text_field :phone %>
    <% if user.errors.has_key?(:phone) %>
      <p class="text-danger"><%= user.errors[:phone].first %></p>
    <% end %>
