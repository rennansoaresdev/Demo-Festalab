<div class="container">
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

<h1>Detalhes</h1>

  <div class="user-card">
    <div class="user-info">
      <%= render @user %>
    </div>
    <div class="user-actions">
      <%= link_to "Editar", edit_user_path(@user), class: "btn btn-success" %>
      <%= button_to "Deletar", @user, method: :delete, class: "btn btn-danger", onclick: "return confirm('Tem certeza de que deseja deletar este usuÃ¡rio?');" %>
      <%= link_to "Voltar", users_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
